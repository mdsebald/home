	name = Luke Bakken
	email = luke@bakken.io
	useconfigonly = true
[core]
	autocrlf = false
	safecrlf = true
	filemode = true
	excludesfile = %%HOME%%/.gitignore_global
	editor = vim
[color]
	ui = true
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	st = status
	ci = commit
	co = checkout
	m = merge
	f = fetch
	rp = remote prune
	pu = push
	b = branch
	r = rebase
[push]
	default = upstream
[grep]
	lineNumber = true
[merge]
	tool = vimdiff
[diff]
	guitool = vimdiff
	tool = vimdiff
[pull]
	rebase = true
[credential]
    helper = cache
